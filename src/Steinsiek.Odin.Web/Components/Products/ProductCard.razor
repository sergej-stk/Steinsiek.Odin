@inject NavigationManager Navigation

<div class="card product-card h-100" @onclick="NavigateToDetail">
    @if (!string.IsNullOrEmpty(Product.ImageUrl))
    {
        <img src="@Product.ImageUrl" class="card-img-top" alt="@Product.Name" style="height: 200px; object-fit: cover;" />
    }
    else
    {
        <div class="placeholder-image card-img-top" style="height: 200px;">
            <i class="bi bi-bag"></i>
        </div>
    }
    <div class="card-body d-flex flex-column gap-1">
        <h6 class="card-title fw-semibold text-truncate mb-1">@Product.Name</h6>
        @if (!string.IsNullOrEmpty(Product.CategoryName))
        {
            <span class="badge text-bg-primary align-self-start">@Product.CategoryName</span>
        }
        @if (!string.IsNullOrEmpty(Product.Description))
        {
            <p class="card-text text-muted small text-truncate-2 mb-1">@Product.Description</p>
        }
        <div class="d-flex align-items-center justify-content-between mt-auto">
            <span class="fw-bold text-primary fs-6">@Product.Price.ToString("C2")</span>
            @if (Product.Stock > 0)
            {
                <span class="badge text-bg-success">In Stock</span>
            }
            else
            {
                <span class="badge text-bg-danger">Out of Stock</span>
            }
        </div>
    </div>
</div>

@code {
    /// <summary>
    /// The product to display.
    /// </summary>
    [Parameter, EditorRequired]
    public ProductDto Product { get; set; } = default!;

    private void NavigateToDetail()
    {
        Navigation.NavigateTo($"/products/{Product.Id}");
    }
}
