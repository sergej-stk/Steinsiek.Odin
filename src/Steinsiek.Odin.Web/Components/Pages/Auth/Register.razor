@page "/register"

<PageTitle>Register - @AppInfo.ProductName</PageTitle>

<div class="d-flex align-items-center justify-content-center" style="min-height: 70vh;">
    <div class="card shadow" style="width: 100%; max-width: 500px;">
        <div class="card-body p-5">
            <div class="d-flex align-items-center gap-3 mb-4">
                <img src="images/logo.png" alt="@AppInfo.ProductName Logo" style="height: clamp(48px, 10vw, 64px);">
                <div>
                    <h4 class="fw-bold mb-1">Create Account</h4>
                    <p class="text-muted small mb-0">Join the @AppInfo.ProductName platform</p>
                </div>
            </div>
            <RegisterForm />
        </div>
    </div>
</div>
