@page "/profile"
@attribute [Authorize]
@inject IAuthApiClient AuthApi

<PageTitle>Profile - @AppInfo.ProductName</PageTitle>

<PageHeader Title="Profile" Subtitle="Your account information" />

@if (_user is null && !_error)
{
    <div class="text-center py-4">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else if (_error)
{
    <div class="alert alert-danger mb-4">
        Failed to load profile information. Please try again later.
    </div>
}
else if (_user is not null)
{
    <div class="row">
        <div class="col-12 col-md-6">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex flex-column align-items-center gap-3 p-3">
                        <div class="avatar-circle">
                            @(_user.FirstName[0])@(_user.LastName[0])
                        </div>
                        <h5 class="fw-bold mb-0">@_user.FirstName @_user.LastName</h5>
                        <p class="text-muted mb-0">@_user.Email</p>
                    </div>
                    <hr />
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between">
                            <span class="text-muted"><i class="bi bi-person-badge me-2"></i>User ID</span>
                            <span class="font-monospace small">@_user.Id</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            <span class="text-muted"><i class="bi bi-person me-2"></i>First Name</span>
                            <span>@_user.FirstName</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            <span class="text-muted"><i class="bi bi-person me-2"></i>Last Name</span>
                            <span>@_user.LastName</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            <span class="text-muted"><i class="bi bi-envelope me-2"></i>Email</span>
                            <span>@_user.Email</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private UserDto? _user;
    private bool _error;

    /// <inheritdoc />
    protected override async Task OnInitializedAsync()
    {
        _user = await AuthApi.GetCurrentUser(CancellationToken.None);
        if (_user is null)
        {
            _error = true;
        }
    }
}
