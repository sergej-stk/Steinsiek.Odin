@page "/products"
@inject IProductApiClient ProductApi
@inject ICategoryApiClient CategoryApi
@inject NavigationManager Navigation

<PageTitle>Products - Odin</PageTitle>

<PageHeader Title="Products" Subtitle="Browse our product catalog">
    <Actions>
        <AuthorizeView>
            <Authorized>
                <MudButton Href="/products/create" Variant="Variant.Filled" Color="Color.Primary"
                           StartIcon="@Icons.Material.Filled.Add">
                    New Product
                </MudButton>
            </Authorized>
        </AuthorizeView>
    </Actions>
</PageHeader>

<MudGrid Class="mb-4">
    <MudItem xs="12" sm="8" md="6">
        <ProductSearchBar Value="@_searchQuery" ValueChanged="@OnSearchChanged" />
    </MudItem>
    <MudItem xs="12" sm="4" md="3">
        @if (_categories is not null)
        {
            <MudSelect T="Guid?" Value="_selectedCategoryId" ValueChanged="@OnCategoryChanged"
                       Label="Category" Variant="Variant.Outlined" Clearable="true"
                       AnchorOrigin="Origin.BottomCenter">
                @foreach (var category in _categories.Data)
                {
                    <MudSelectItem T="Guid?" Value="@((Guid?)category.Id)">@category.Name</MudSelectItem>
                }
            </MudSelect>
        }
    </MudItem>
</MudGrid>

@if (_products is not null)
{
    <MudText Typo="Typo.body2" Color="Color.Secondary" Class="mb-3">
        @_products.TotalCount product(s) found
    </MudText>
}

@if (_isLoading)
{
    <LoadingIndicator />
}
else
{
    <ProductGrid Products="_products?.Data" />
}

@code {
    private ListResult<ProductDto>? _products;
    private ListResult<CategoryDto>? _categories;
    private string? _searchQuery;
    private Guid? _selectedCategoryId;
    private bool _isLoading = true;

    [SupplyParameterFromQuery(Name = "category")]
    private Guid? CategoryFromQuery { get; set; }

    /// <inheritdoc />
    protected override async Task OnInitializedAsync()
    {
        _selectedCategoryId = CategoryFromQuery;
        var categoriesTask = CategoryApi.GetAll(CancellationToken.None);
        var productsTask = LoadProducts();
        await Task.WhenAll(categoriesTask, productsTask);
        _categories = categoriesTask.Result;
    }

    private async Task OnSearchChanged(string? query)
    {
        _searchQuery = query;
        _selectedCategoryId = null;
        await LoadProducts();
    }

    private async Task OnCategoryChanged(Guid? categoryId)
    {
        _selectedCategoryId = categoryId;
        _searchQuery = null;
        await LoadProducts();
    }

    private async Task LoadProducts()
    {
        _isLoading = true;
        StateHasChanged();

        if (!string.IsNullOrWhiteSpace(_searchQuery))
        {
            _products = await ProductApi.Search(_searchQuery, CancellationToken.None);
        }
        else if (_selectedCategoryId.HasValue)
        {
            _products = await ProductApi.GetByCategory(_selectedCategoryId.Value, CancellationToken.None);
        }
        else
        {
            _products = await ProductApi.GetAll(CancellationToken.None);
        }

        _isLoading = false;
        StateHasChanged();
    }
}
