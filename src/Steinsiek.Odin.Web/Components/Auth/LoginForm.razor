@inject IAuthApiClient AuthApi
@inject ITokenStorageService TokenStorage
@inject JwtAuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation
@inject IToastService ToastService

<EditForm Model="_model" OnValidSubmit="HandleLogin">
    <DataAnnotationsValidator />
    <div class="d-flex flex-column gap-3">
        <ErrorAlert Message="@_errorMessage" Visible="@(_errorMessage is not null)" />
        <div>
            <label class="form-label">Email</label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                <InputText @bind-Value="_model.Email" class="form-control" type="email" />
            </div>
            <ValidationMessage For="@(() => _model.Email)" />
        </div>
        <div>
            <label class="form-label">Password</label>
            <div class="input-group">
                <input type="@(_showPassword ? "text" : "password")" class="form-control"
                       @bind="_model.Password" @bind:event="oninput" />
                <button class="btn btn-outline-secondary" type="button" @onclick="@(() => _showPassword = !_showPassword)">
                    <i class="bi @(_showPassword ? "bi-eye-slash" : "bi-eye")"></i>
                </button>
            </div>
            <ValidationMessage For="@(() => _model.Password)" />
        </div>
        <button type="submit" class="btn btn-primary btn-lg w-100" disabled="@_isLoading">
            @if (_isLoading)
            {
                <span class="spinner-border spinner-border-sm me-2" role="status"></span>
            }
            Login
        </button>
        <p class="text-center text-muted small mb-0">
            Don't have an account?
            <a href="/register">Register here</a>
        </p>
    </div>
</EditForm>

@code {
    private LoginFormModel _model = new();
    private bool _isLoading;
    private bool _showPassword;
    private string? _errorMessage;

    /// <summary>
    /// The URL to redirect to after successful login.
    /// </summary>
    [Parameter]
    public string? ReturnUrl { get; set; }

    private async Task HandleLogin()
    {
        _isLoading = true;
        _errorMessage = null;

        var request = new LoginRequest { Email = _model.Email, Password = _model.Password };
        var result = await AuthApi.Login(request, CancellationToken.None);

        if (result is not null)
        {
            await TokenStorage.SetToken(result.Token, CancellationToken.None);
            AuthStateProvider.NotifyAuthenticationStateChanged();
            ToastService.Show($"Welcome back, {result.User.FirstName}!", ToastLevel.Success);
            Navigation.NavigateTo(ReturnUrl ?? "/");
        }
        else
        {
            _errorMessage = "Invalid email or password. Please try again.";
        }

        _isLoading = false;
    }

    /// <summary>
    /// Form model for the login form.
    /// </summary>
    private sealed class LoginFormModel
    {
        /// <summary>
        /// The user's email address.
        /// </summary>
        [Required(ErrorMessage = "Email is required")]
        public string Email { get; set; } = string.Empty;

        /// <summary>
        /// The user's password.
        /// </summary>
        [Required(ErrorMessage = "Password is required")]
        public string Password { get; set; } = string.Empty;
    }
}
