<Router AppAssembly="typeof(Program).Assembly">
    <Found Context="routeData">
        <AuthorizeRouteView RouteData="routeData" DefaultLayout="typeof(Layout.MainLayout)">
            <NotAuthorized>
                <div class="d-flex align-items-center justify-content-center" style="min-height: 60vh;">
                    <div class="card shadow p-5 text-center" style="max-width: 400px;">
                        <div class="card-body">
                            <i class="bi bi-lock-fill text-primary fs-1 mb-3 d-block"></i>
                            <h5 class="fw-bold mb-2">Access Denied</h5>
                            <p class="text-muted mb-4">You need to be logged in to access this page.</p>
                            <a href="/login" class="btn btn-primary">Go to Login</a>
                        </div>
                    </div>
                </div>
            </NotAuthorized>
        </AuthorizeRouteView>
        <FocusOnNavigate RouteData="routeData" Selector="h1" />
    </Found>
</Router>
