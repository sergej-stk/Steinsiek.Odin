@if (Filters is not null && Filters.Count > 0)
{
    <div class="d-flex flex-wrap gap-2 mb-3 d-print-none">
        @foreach (var chip in Filters)
        {
            <span class="badge bg-primary bg-opacity-10 text-primary d-inline-flex align-items-center gap-1 filter-chip">
                <span>@chip.Label: @chip.Value</span>
                <button type="button" class="btn-close btn-close-sm" style="font-size: 0.6em;" @onclick="() => OnRemove.InvokeAsync(chip.Key)"></button>
            </span>
        }
        <button type="button" class="btn btn-link btn-sm text-decoration-none p-0" @onclick="OnClearAll">
            Clear all
        </button>
    </div>
}

@code {
    /// <summary>
    /// The list of active filter chips to display.
    /// </summary>
    [Parameter]
    public IReadOnlyList<FilterChipModel>? Filters { get; set; }

    /// <summary>
    /// Callback invoked when a single filter chip is removed, passing the filter key.
    /// </summary>
    [Parameter]
    public EventCallback<string> OnRemove { get; set; }

    /// <summary>
    /// Callback invoked when all filters are cleared.
    /// </summary>
    [Parameter]
    public EventCallback OnClearAll { get; set; }
}
