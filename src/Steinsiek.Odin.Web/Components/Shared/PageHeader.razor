<MudStack Class="mb-4">
    @if (BreadcrumbItems is not null && BreadcrumbItems.Count > 0)
    {
        <MudBreadcrumbs Items="BreadcrumbItems" Class="pa-0" />
    }
    <MudStack Row="true" AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween">
        <MudText Typo="Typo.h4" Style="font-weight: 700;">@Title</MudText>
        @if (Actions is not null)
        {
            @Actions
        }
    </MudStack>
    @if (!string.IsNullOrEmpty(Subtitle))
    {
        <MudText Typo="Typo.body1" Color="Color.Secondary">@Subtitle</MudText>
    }
</MudStack>

@code {
    /// <summary>
    /// The page title.
    /// </summary>
    [Parameter]
    public string Title { get; set; } = string.Empty;

    /// <summary>
    /// Optional subtitle.
    /// </summary>
    [Parameter]
    public string? Subtitle { get; set; }

    /// <summary>
    /// Breadcrumb navigation items.
    /// </summary>
    [Parameter]
    public List<BreadcrumbItem>? BreadcrumbItems { get; set; }

    /// <summary>
    /// Optional action buttons rendered on the right side.
    /// </summary>
    [Parameter]
    public RenderFragment? Actions { get; set; }
}
