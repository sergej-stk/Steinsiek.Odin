@inject IDialogService DialogService

<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.body1">@ContentText</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Variant="Variant.Text">Cancel</MudButton>
        <MudButton Color="@ButtonColor" Variant="Variant.Filled" OnClick="Confirm">@ButtonText</MudButton>
    </DialogActions>
</MudDialog>

@code {
    /// <summary>
    /// The dialog content text.
    /// </summary>
    [Parameter]
    public string ContentText { get; set; } = "Are you sure you want to delete this item?";

    /// <summary>
    /// The confirm button text.
    /// </summary>
    [Parameter]
    public string ButtonText { get; set; } = "Delete";

    /// <summary>
    /// The confirm button color.
    /// </summary>
    [Parameter]
    public Color ButtonColor { get; set; } = Color.Error;

    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = default!;

    private void Confirm()
    {
        MudDialog.Close(DialogResult.Ok(true));
    }

    private void Cancel()
    {
        MudDialog.Cancel();
    }
}
