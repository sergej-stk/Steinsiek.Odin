<nav class="navbar navbar-expand-lg sticky-top">
    <div class="container-xl">
        <a class="navbar-brand d-flex align-items-center fw-bold font-norse" href="/">
            ODIN
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <AuthorizeView>
                    <Authorized>
                        <li class="nav-item">
                            <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">
                                <i class="bi bi-speedometer2 me-1"></i> Dashboard
                            </NavLink>
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link" href="/persons" Match="NavLinkMatch.Prefix">
                                <i class="bi bi-people me-1"></i> Persons
                            </NavLink>
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link" href="/companies" Match="NavLinkMatch.Prefix">
                                <i class="bi bi-building me-1"></i> Companies
                            </NavLink>
                        </li>
                    </Authorized>
                </AuthorizeView>
            </ul>
            <div class="d-flex align-items-center gap-2">
                <button class="btn-theme-toggle" @onclick="OnToggleDarkMode"
                        aria-label="@(IsDarkMode ? "Switch to Light Mode" : "Switch to Dark Mode")">
                    <i class="bi @(IsDarkMode ? "bi-sun-fill" : "bi-moon-fill")"></i>
                </button>
                <AuthorizeView>
                    <Authorized>
                        <div class="dropdown">
                            <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle me-1"></i> Account
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="/profile"><i class="bi bi-person me-2"></i>Profile</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><button class="dropdown-item" @onclick="OnLogout"><i class="bi bi-box-arrow-right me-2"></i>Logout</button></li>
                            </ul>
                        </div>
                    </Authorized>
                    <NotAuthorized>
                        <a href="/login" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-box-arrow-in-right me-1"></i> Login
                        </a>
                        <a href="/register" class="btn btn-primary btn-sm">
                            Register
                        </a>
                    </NotAuthorized>
                </AuthorizeView>
            </div>
        </div>
    </div>
</nav>

@code {
    /// <summary>
    /// Whether dark mode is currently active.
    /// </summary>
    [Parameter]
    public bool IsDarkMode { get; set; }

    /// <summary>
    /// Callback to toggle dark mode.
    /// </summary>
    [Parameter]
    public EventCallback OnToggleDarkMode { get; set; }

    /// <summary>
    /// Callback to log out the current user.
    /// </summary>
    [Parameter]
    public EventCallback OnLogout { get; set; }
}
